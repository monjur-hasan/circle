<%- include('./layout.ejs') %>

<% if (logged) { %>
    <div class="container">
        <% if(err){ %>
            <h4><%= err %></h4>
        <% } %>
        <p class="text-center mt-5 font-weight-bold"> Create a New Topic </p>
        <form action="/new-topic" method="POST">
            <div class="form-group">
                <label for="name" class="font-weight-bold" > Name </label>
                <input class="form-control" name="name" type="text" id="name" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="message" class="font-weight-bold"> Description </label>
                <textarea class="form-control" name="desc" id="message" rows="3"></textarea>
            </div>
            <button class="btn btn-primary btn-block" type="submit">Submit</button>
        </form>
    </div>
<% } else { %>
    <a href="/login"> <center><button class="btn btn-outline-dark mt-4" type="button"> Please login to create a topic </button></center> </a>
<% } %>